
@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";

    List<CosmeticsShop.Models.Product> products = ViewBag.ListProduct as List<CosmeticsShop.Models.Product>;
}
<style>
    .slider-container {
        position: relative;
        max-width: 100%;
        overflow: hidden;
    }
    .slider {
        display: flex;
 
        transition: transform 0.5s ease-in-out;
    }

    .slide {
        min-width: 100%;
    }
        .slide img {
            width: 100%;
            height: 450px;
            object-fit: fill;
        }

    .prev, .next {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background-color: rgba(0, 0, 0, 0.5);
        color: white;
        border: none;
        padding: 10px;
        cursor: pointer;
        font-size: 20px;
    }

    .prev {
        left: 10px;
    }

    .next {
        right: 10px;
    }

        .prev:hover, .next:hover {
            background-color: rgba(0, 0, 0, 0.8);
        }

</style>
<!--banner-->
<div class="banner">

    <div class="slider-container">
        <div class="slider">
            <div class="slide"><img src="~/Content/images/banner1.jpg" alt="Slide 1"></div>
            <div class="slide"><img src="~/Content/images/banner2.jpg" alt="Slide 2"></div>
            <div class="slide"><img src="~/Content/images/banner3.jpg" alt="Slide 3"></div>
        </div>
        <!-- Nút điều hướng -->
        <button class="prev" onclick="prevSlide()">&#10094;</button>
        <button class="next" onclick="nextSlide()">&#10095;</button>
    </div>

</div>
<!--//banner-->
<div class="products">
    <div class="container">
        <h3 style="text-align:center"> <b>Sản phẩm</b></h3>
        <div class="col-md-12">
            @if (products.Count > 0)
            {
                for (int i = 0; i < products.Count; i++)
                {
                    <div class="col-md-3" style="margin-top:25px">
                        <div class="col-md1 simpleCart_shelfItem">
                            <a href="/Product/Details/@products[i].ID">
                                <img class="img-responsive" src="~/Content/images/@products[i].Image1" alt="" style="height:250px;width:200px" />
                            </a>
                            <h3><a href="/Product/Details/@products[i].ID">@products[i].Name</a></h3>
                            <div class="price">
                                <h5 class="item_price">@products[i].Price.Value.ToString("#,##")₫</h5>
                                <p class="item_price">Đã bán: @products[i].PurchasedCount (Còn lại @products[i].Quantity)</p>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <h3>Không có sản phẩm nào...</h3>
            }
        </div>
    </div>
</div>

<script>
    let currentIndex = 0;
    const slides = document.querySelectorAll(".slide");
    const totalSlides = slides.length;

    function showSlide(index) {
        if (index >= totalSlides) {
            currentIndex = 0;
        } else if (index < 0) {
            currentIndex = totalSlides - 1;
        } else {
            currentIndex = index;
        }
        document.querySelector(".slider").style.transform = `translateX(-${currentIndex * 100}%)`;
    }

    function nextSlide() {
        showSlide(currentIndex + 1);
    }

    function prevSlide() {
        showSlide(currentIndex - 1);
    }

    setInterval(nextSlide, 3000);

</script>